---
import { fade } from "astro:transitions";

---
<header class="flex justify-center items-center h-15 w-full text-center text-lg md:text-2xl tracking-wider">
    <nav class="flex flex-row justify-evenly items-center text-white font-bold w-full">
        <a href='#exp-section'
           class="animate-fade-in-1" 
           style="transition: all 500ms ease"
           transition:animate={fade({ duration: "0.4s" })}>
           WORK
        </a>
        <a href='#' 
           class="animate-fade-in-2" 
           transition:animate={fade({ duration: "0.6s" })}>
           ABOUT
        </a>
        <a href='#' 
           class="animate-fade-in-3" 
           transition:animate={fade({ duration: "0.8s" })}>
           CONTACT
        </a>
    </nav>
</header>

<style>
    .animate-fade-in-1 {
        opacity: 0;
        animation: fadeInUp 0.6s ease-out 0.2s forwards;
    }
    
    .animate-fade-in-2 {
        opacity: 0;
        animation: fadeInUp 0.6s ease-out 0.4s forwards;
    }
    
    .animate-fade-in-3 {
        opacity: 0;
        animation: fadeInUp 0.6s ease-out 0.6s forwards;
    }
    
    @keyframes fadeInUp {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }
</style>

<script is:inline>
    window.addEventListener('DOMContentLoaded', () =>{
        document.addEventListener('astro:page-load', () => {
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();

                document.querySelector(this.getAttribute('href')).scrollIntoView({
                        behavior: 'smooth'
                    });
                });
            });
        
        });
    });
</script>