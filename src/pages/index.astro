---
import BaseLayout from '../layouts/BaseLayout.astro';
import TuxExperience from '../components/TuxExperience';

/* Components */
import Header from '../components/Header.astro';
import Experience from '../components/Experience.astro';
import Footer from '../components/Footer.astro';
---
<BaseLayout>
    <main class="bg-black">
        <Header />

        <section class="flex flex-col md:flex-row justify-center items-center text-white text-xl md:text-2xl text-center m-auto w-full md:w-3/4"
             style="background: radial-gradient(circle at center, rgba(49, 49, 49, 0.4), rgba(17, 24, 39, 0) 65%);">
            <section class="z-30 ml-20 mt-20 block md:items-center w-full text-left mb-20">
                <h1 id="my-name" class="font-bold inline-block gradient">I'm Manuel Rubio</h1> <br />
                <span class="text-md md:text-xl font-cnt font-bold tracking-wide">Software Engineer <span>&&</span> Computer Scientist</span>

                <footer class="text-sm md:text-xl mt-7 flex flex-row font-cnt font-semibold">
                    <legend class="relative text-sm align-super">Based on</legend>
                    <span class="text-gray-200 text-lg mt-[12.5px] absolute">MÃ©xico</span>
                </footer>
            </section>
            
            <div id="main-text-model" class="scale-90 md:-mt-0 -mt-50 md:scale-100 mr-0 ml-auto h-[600px] w-[250px] md:h-[600px] md:w-[300px]">
                <TuxExperience client:load />
            </div>
        </section>

        <Experience class="appear" />
        <Footer />
    </main>
</BaseLayout>

